<h1>Kudos</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Giver</th>
    <th>Receiver</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @kudos.each do |kudo| %>
    <tr id="row">
      <td><%= kudo.title %></td>
      <td><%= kudo.content %></td>
      <td><%= kudo.giver.email %></td>
      <td><%= kudo.receiver.email %></td>
      <td id="action"><%= link_to 'Show', kudo %></td>
      <td id="action"><%= link_to 'Edit', edit_kudo_path(kudo) unless current_employee.id != kudo.giver.id %></td>
      <td id="action"><%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } unless current_employee.id != kudo.giver.id %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Kudo', new_kudo_path %></button>
